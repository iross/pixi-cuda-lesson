[workspace]
authors = ["Ian Ross <ian.ackerman.ross@gmail.com>"]
channels = ["conda-forge"]
name = "cuda-example"
platforms = ["osx-arm64", "linux-64", "win-64"]
version = "0.1.0"

[tasks]

[dependencies]
python = ">=3.13.5,<3.14"

[system-requirements]
cuda = "12"

[target.linux-64.dependencies]
cuda = ">=12.9.1,<13"
pytorch-gpu = ">=2.7.1,<3"

[feature.cpu.dependencies]
pytorch-cpu = "*"

[feature.gpu.dependencies]
pytorch-gpu = "*"

[environments]
gpu = ["gpu"]
cpu = ["cpu"]
